<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalPatient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <android.support.v7.widget.CardView
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/Primary"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/PName"
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:textSize="30dp"
                    android:text="Smith"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/PAge"
                    android:textSize="20dp"
                    android:paddingLeft="30dp"
                    android:text="Age : 43"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/PSex"
                    android:paddingLeft="30dp"
                    android:textSize="20dp"
                    android:text="Sex : Male"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/Pdiscrip"
                    android:paddingLeft="30dp"
                    android:paddingBottom="10dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Period of treatment : 1 year "/>



            </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:focusable="true"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:background="@color/Primary">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:textSize="20dp"
                    android:text="2018. 11. 11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:textSize="20dp"
                    android:text="Part 3 Score: 82"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:textSize="20dp"
                    android:text="Part A: 30      Part B: 6     Part C: 21 "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:textSize="20dp"
                    android:text="Hz : 4.5Hz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:textSize="20dp"
                    android:text="Amp : 11.9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:paddingTop="10dp"
                    android:paddingLeft="30dp"
                    android:textSize="20dp"
                    android:text="Fitting : 0.845"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:background="@color/Primary">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:paddingTop="10dp"
                            android:paddingLeft="30dp"
                            android:textSize="20dp"
                            android:text="2018. 11. 10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:paddingLeft="30dp"
                            android:textSize="20dp"
                            android:text="Part 3 Score: 21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:paddingLeft="30dp"
                            android:textSize="20dp"
                            android:text="Part A: 11      Part B: 0     Part C: 12 "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:paddingLeft="30dp"
                            android:textSize="20dp"
                            android:text="Hz : 2.9Hz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:paddingLeft="30dp"
                            android:textSize="20dp"
                            android:text="Amp : 2.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:paddingTop="10dp"
                            android:paddingLeft="30dp"
                            android:textSize="20dp"
                            android:text="Fitting : 0.995"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>